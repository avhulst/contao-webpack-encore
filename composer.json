{
    "name": "terminal42/contao-webpack-encore",
    "description": "Adds Symfony Webpack Encore support to Contao.",
    "keywords": ["contao", "symfony", "webpack", "encore"],
    "homepage": "https://github.com/terminal42/contao-webpack-encore",
    "type": "contao-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "terminal42 gmbh",
            "homepage": "http://www.terminal42.ch"
        }
    ],
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/terminal42"
        },
        {
            "type": "other",
            "url": "https://ko-fi.com/terminal42"
        }
    ],
    "support": {
        "issues": "https://github.com/terminal42/contao-webpack-encore/issues",
        "source": "https://github.com/terminal42/contao-webpack-encore",
        "forum": "https://community.contao.org"
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "contao/core-bundle": "^4.9",
        "symfony/webpack-encore-bundle": "^1.12"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "contao/easy-coding-standard": "^3.0"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Terminal42\\WebpackEncoreBundle\\": "src/"
        }
    },
    "extra": {
        "contao-manager-plugin": "Terminal42\\WebpackEncoreBundle\\ContaoManager\\Plugin"
    },
    "scripts": {
        "cs-fixer": [
            "vendor/bin/ecs check src/ --fix --ansi"
        ]
    }
}
